{
	${"Default/Translation.json"},
	${"Default/StatisticbyTank.json"},
	${"Default/Colors.json"},

	"SkinDescription": {
		"Author": "ShuraBB",
		"Name": "TimeSpent Lite",
		"Version": "3.0",
		"Description": "txt:DescLite"
	},

	"OriginalResults": true,
	"InBattleResult": false,

	"StatisticSessions": {
		"Current": {
			"Reset": {"ResetAfter": 0, "ResetTime": 0},
			"BattleTypes": [1,3,7,13,20,21,22,24],
			"SectionsList": ["Statistic", "Tanks", "Maps"]
		}
	},

	"ResultName": {"Win": "txt:Win", "Defeat": "txt:Defeat", "Draw": "txt:Draw"},

	"Pages": {
		"First": "Current",
		"NoBattle": {
			"template": [
				"<p align='center'><font color='#E0E0E0' size='16'>{{UserName}}\ntxt:NoBattle</font></p>",
				"\n\n<font size='12' color='#545454'>",
				"txt:Mod: <a href='event:{{ModURL}}'><font color='#545454'>{{ModVersion}}</font></a>\n",
				"txt:Skin: '{{SkinName}}' ver:{{SkinVersion}}\n",
				"txt:Autor: {{SkinAuthor}}\n\n",
				"<p align='justify'>{{SkinDescription}}</p></font>"
			],
			"icon": "",
			"bgIcon": ""
		},
		"Current": {
			"template": [
				"<p align='center'><font size='16' color='#33cc00'><b>txt:Stat</b></font></p><textformat tabstops='160'>\n",

				"txt:onSession: <b>{{Current_SessionStart}}</b>\n",
				"txt:SessionTime:\t<b>{{Current_SessionTime}}</b>\n",
				"txt:aBattle:\t<b>{{Current_BattleCounter}}</b>\n",
				"txt:Wins:\t<b>{{Current_WinCounter}} ({{Current_WinCounter:r}}%)</b>\n",
				"txt:lBattle:\t<b>{{LastBattleTime}}</b>\n",
				"txt:inBattles:\t<b>{{Current_BattleTimer:t}}</b>\n",
				"txt:BattleTimeAvg:\t<b>{{Current_BattleTimerAvg:t}}</b>\n",
				"txt:tOnline:\t<b>{{Current_SessionOnline}}</b>\n",
				"<p align='center'>\n{{um:ButtonMaps}}   {{um:ButtonTanks}}   {{um:ButtonReset}}</p>"
			],
			"icon": "img://gui/maps/icons/library/ClanBattleResultIcon-1.png",
			"bgIcon": "img://../res_mods/configs/BBMods/bg.png"
		},
		"Maps": {
			"template": [
				"<p align='center'><font size='16' color='#33cc00'><b>txt:StatMaps</b></font></p><textformat tabstops='110,135,173'>\n",
				"{{Current_MapsStat}}",
				"<p align='center'>\n{{um:ButtonCurrent}}   {{um:ButtonTanks}}   {{um:ButtonReset}}</p>"
			],
			"bgIcon": "img://../res_mods/configs/BBMods/bg.png"
		},
		"Tanks": {
			"template": [
				"<p align='center'><font size='16' color='#33cc00'><b>txt:StatTanks</b></font></p><textformat tabstops='110,135,173'>\n",
				"{{Current_TanksStat}}",
				"<p align='center'>\n{{um:ButtonCurrent}}   {{um:ButtonMaps}}   {{um:ButtonReset}}</p>"
			],
			"bgIcon": "img://../res_mods/configs/BBMods/bg.png"
		}
	},
	"UserMacros": {
		"um:ButtonCurrent": ["<a href='event:Page:Current'><b>txt:bCurrent</b></a>"],
		"um:ButtonMaps": ["<a href='event:Page:Maps'><b>txt:bMaps</b></a>"],
		"um:ButtonTanks": ["<a href='event:Page:Tanks'><b>txt:bTanks</b></a>"],
		"um:ButtonReset": ["<a href='event:Reset'><b>[R]</b></a>"]
	},

	"Current_MapsStat": {
		"SortKey": "BattleCounter#des",
		"template": ["{{Name}}:\t{{BattleCounter}}/{{WinCounter}}\t{{BattleTimerAvg:t}}\t{{BattleTimer:t}}\n"]
	},
	"Current_TanksStat": {
		"SortKey": "BattleCounter#des",
		"template": ["{{Name}}:\t{{BattleCounter}}/{{WinCounter}}\t{{BattleTimerAvg:t}}\t{{BattleTimer:t}}\n"]
	},

	"Current_SessionTime": "%H:%M",
	"BattleTimer": "%H:%M:%S",
	"Current_SessionOnline": "%H:%M:%S"
}