{
	${"Default/Translation.json"},
	${"Default/StatisticbyTank.json"},
	${"Default/Colors.json"},

	"SkinDescription": {
		"Author": "ShuraBB",
		"Name": "TimeSpent Zero",
		"Version": "3.0",
		"Description": "txt:DescZero"
	},

	"ScrollStep": 15,
	"PopUpResultLife": 12000.0,
	"PopUpResultHiding": 1000.0,
	"OriginalResults": false,
	"InBattleResult": true,

	"StatisticSessions": {
		"Current": {
			"Reset": {"ResetAfter": 7, "ResetTime": 3},
			"BattleTypes": [1,3,7,13,20,21,22,24]
		}
	},

	"ResultName": {"Win": "txt:Win", "Defeat": "txt:Defeat", "Draw": "txt:Draw"},
	
	"Pages": {
		"First": "Current",
		"NoBattle": {
			"template": [
				"<p align='center'><font color='#E0E0E0' size='16'>{{UserName}}\ntxt:NoBattle</font></p>\n\n",
				"<font size='12' color='#545454'>",
				"txt:Mod: <a href='event:{{ModURL}}'><font color='#545454'>{{ModVersion}}</font></a>\n",
				"txt:Skin: '{{SkinName}}' ver:{{SkinVersion}}\n",
				"txt:Autor: {{SkinAuthor}}\n\n",
				"<p align='justify'>{{SkinDescription}}</p></font>"
			],
			"icon": "",
			"bgIcon": ""
		},
		"Current": {
			"icon": "img://gui/maps/icons/statistic/battles24.png",
			"template": [
				"<textformat tabstops='110,164'>",
				"txt:rWN8:\t<font color='{{c:Current_WN8}}'><b>{{Current_WN8}}</b></font>\n",
				"txt:Wins:\t<b><font color='#D3D3D3'>{{Current_WinCounter}}/{{Current_BattleCounter}}</font>\t<font color='{{c:Current_WinCounter:r}}'>{{Current_WinCounter:r}}%</font></b>\n",
				"txt:Damage2:\t<b><font color='#D3D3D3'>{{Current_DamageDealt}}\t{{Current_DamageDealtAvg}}</font></b>\n",
				"txt:Dest:\t<b><font color='#D3D3D3'>{{Current_Kills}}\t{{Current_KillsAvg:2f}}</font></b>\n",
				"txt:Exp:\t<b><font color='#D3D3D3'>{{Current_OriginalXP}}\t{{Current_OriginalXPAvg}}</font></b>\n",
				"txt:Credits:\t<b><font color='{{c:Current_CreditsAvg}}'>{{Current_Credits}}\t{{Current_CreditsAvg}}</font></b>\n"
// 				,"\n<p align='center'>{{um:ButtonReset}}</p>"
			]
		}
	},

	"InBattleResultPattern": ["<font color='{{c:BattleResult}}' size='18'>{{BattleResultName}}: {{BattleMapName}} - {{BattleTankName}}</font>"],

	"ResultPattern": {
		"bgIcon": "",
		"template": ["{{um:Results}}"]
	},

	"UserMacros": {
		"um:Results": [
			"<p align='center'><font color='{{c:BattleResult}}' size='16'><b>{{BattleTankName}}\n{{BattleMapName}}</b></font></p>\n<textformat tabstops='80'>",
			"txt:KilDam:\t<font color='#D3D3D3'>{{BattleKills}} | {{BattleDamageDealt}} / {{BattleAssistedRadio}} / {{BattleAssistedTrack}}</font>\n",
			"txt:Credits:\t<font color='#D3D3D3'>{{BattleCreditDebit}} ( {{BattleCredits}} - {{BattleExpenses}} )</font>\n",
			"txt:Exp:\t<font color='#D3D3D3'>{{BattleXP}} / {{BattleTmenXP}} / {{BattleFreeXP}} {{BattleDailyXPFactor}}</font>\n",
			"<p align='center'>\n{{um:ButtonResult}}</p>"
		],
		"um:ButtonReset": ["<a href='event:Reset'><b>txt:bReset</b></a>"],
		"um:ButtonResult": ["<a href='event:showBattleResults'>txt:bDetailed</a>"]
	}
}