/*

    {name-tank}	        - название танка
    {name-ico}			- название иконки танка
	{name-gun}		    - название орудия танка цели	
    {reload}	        - примерное время перезарядки орудия танка
    {vision}			- радиус обзора танка цели (для 100% экипажа)
	{target-weight}     - масса танка выбранной цели в тоннах
	{player-weight}	    - масса своего танка в тоннах
	{hull-front}		- лобовое бронирование корпуса танка цели
	{hull-side}			- бортовое бронирование корпуса танка цели
	{hull-back}			- бронирование кормы корпуса танка цели
	{turret-front}		- лобовое бронирование башни танка цели
	{turret-side}		- бортовое бронирование башни танка цели
	{turret-back}		- бронирование кормы башни танка цели
	{damage-1}			- урон первого типа снаряда танка цели
	{damage-2}			- урон второго типа снаряда танка цели
	{damage-3}			- урон третьего типа снаряда танка цели
	{power-1}			- бронепробиваемость первого типа снаряда танка цели
	{power-2}			- бронепробиваемость второго типа снаряда танка цели
	{power-3}			- бронепробиваемость третьего типа снаряда танка цели
	{type-1}			- первый тип снаряда танка цели
	{type-2}			- второй тип снаряда танка цели
	{type-3}			- третий тип снаряда танка цели	
	{speed-forward}		- максимальная скорость вперед, км/ч
	{speed-backward}	- максимальная скорость назад, км/ч
	{speed-turn}		- скорость поворота	
	{count-burst}	    - количество снарядов выпускаемых за 1 очередь
	{count-clip}		- количество снарядов в барабане
    {weight-color}      - Цвета зависящим от соотношения масс цели и танка игрока

*/
{
    "background": {
        "alpha": 15,
        "enable": false,
        "height": 250,
        "image": "gui/maps/bg.png",
        "width": 180,
        "x": 0,
        "y": 0
    },
    "position": {
        "arcade": {
            "alignX": "center",
            "alignY": "center",
            "x": -300,
            "y": 150
        },
        "postmortem": {
            "alignX": "center",
            "alignY": "center",
            "x": -300,
            "y": 150
        },
        "sniper": {
            "alignX": "center",
            "alignY": "center",
            "x": -300,
            "y": 150
        },
        "strategic": {
            "alignX": "center",
            "alignY": "center",
            "x": -300,
            "y": 150
        }
    },
    "settings": {
        "dragEnable": true,
		"maxTextTank": null,
		"maxTextGun": null,
        "reloadKey": "KEY_LALT and KEY_5",
		"alignTextCenterX": false
    },
    "shadow": {
        "alpha": 100,
        "angle": 90,
        "color": "#000000",
        "distance": 0,
        "enable": true,
        "size": 2,
        "strength": 200
    },
    "shell_type": {
        "AP": "AP",
        "CR": "APCR",
        "HC": "HEAT",
        "HE": "HE"
    },
    "text": {
        "alpha": 100,
		"enable": true,
        "dead": {
            "delay": 10,
            "enable": true,
            "format": "<font face='$TitleFont'>{name-tank}<br/><textformat leading = '-20'><font color = '#00d8ff'>{reload} sek</font><tab><font color = '#CCCCCC'></font></textformat><br/><br/><textformat leading = '-10'><img src='img://gui/maps/icons/vehicle/contour/{name-ico}.png'>Sichtweite: {vision}m<br/><br/></textformat><textformat tabstops='[65, 105, 145]'>Wanne:<tab>{hull-front}<tab>{hull-side}<tab>{hull-back}</textformat><br/><textformat tabstops='[65, 105, 145]'>Turm:<tab>{turret-front}<tab>{turret-side}<tab>{turret-back}</textformat><br/><textformat tabstops='[65, 105, 145]'><font color = '#ffe970'> <tab>{type-1}<tab>{type-2}<tab>{type-3}</font></textformat><br/><textformat tabstops='[65, 105, 145]'>Durchschlag:<tab>{power-1}<tab>{power-2}<tab>{power-3}</textformat><br/><textformat tabstops='[65, 105, 145]'>Schaden:<tab>{damage-1}<tab>{damage-2}<tab>{damage-3}</textformat></font>"
        },
        "enemy": {
            "delay": 10,
            "enable": true,
            "format": "<font face='$TitleFont'>{name-tank}<br/><textformat leading = '-20'><font color = '#00d8ff'>{reload} sek</font><tab><font color = '#CCCCCC'></font></textformat><br/><br/><textformat leading = '-10'><img src='img://gui/maps/icons/vehicle/contour/{name-ico}.png'>Sichtweite: {vision}m<br/><br/></textformat><textformat tabstops='[65, 105, 145]'>Wanne:<tab>{hull-front}<tab>{hull-side}<tab>{hull-back}</textformat><br/><textformat tabstops='[65, 105, 145]'>Turm:<tab>{turret-front}<tab>{turret-side}<tab>{turret-back}</textformat><br/><textformat tabstops='[65, 105, 145]'><font color = '#ffe970'> <tab>{type-1}<tab>{type-2}<tab>{type-3}</font></textformat><br/><textformat tabstops='[65, 105, 145]'>Durchschlag:<tab>{power-1}<tab>{power-2}<tab>{power-3}</textformat><br/><textformat tabstops='[65, 105, 145]'>Schaden:<tab>{damage-1}<tab>{damage-2}<tab>{damage-3}</textformat></font>"
		},
        "player": {
		    "delay": 10,
            "enable": true,
            "format": "<font face='$TitleFont'>{name-tank}<br/><textformat leading = '-20'><font color = '#00d8ff'>{reload} sek</font><tab><font color = '#CCCCCC'></font></textformat><br/><br/><textformat leading = '-10'><img src='img://gui/maps/icons/vehicle/contour/{name-ico}.png'>Sichtweite: {vision}m<br/><br/></textformat><textformat tabstops='[65, 105, 145]'>Wanne:<tab>{hull-front}<tab>{hull-side}<tab>{hull-back}</textformat><br/><textformat tabstops='[65, 105, 145]'>Turm:<tab>{turret-front}<tab>{turret-side}<tab>{turret-back}</textformat><br/><textformat tabstops='[65, 105, 145]'><font color = '#ffe970'> <tab>{type-1}<tab>{type-2}<tab>{type-3}</font></textformat><br/><textformat tabstops='[65, 105, 145]'>Durchschlag:<tab>{power-1}<tab>{power-2}<tab>{power-3}</textformat><br/><textformat tabstops='[65, 105, 145]'>Schaden:<tab>{damage-1}<tab>{damage-2}<tab>{damage-3}</textformat></font>",
            "hotKeys": "KEY_LALT"
        },
        "team": {
            "delay": 10,
            "enable": true,
            "format": "<font face='$TitleFont'>{name-tank}<br/><textformat leading = '-20'><font color = '#00d8ff'>{reload} sek</font><tab><font color = '#CCCCCC'></font></textformat><br/><br/><textformat leading = '-10'><img src='img://gui/maps/icons/vehicle/contour/{name-ico}.png'>Sichtweite: {vision}m<br/><br/></textformat><textformat tabstops='[65, 105, 145]'>Wanne:<tab>{hull-front}<tab>{hull-side}<tab>{hull-back}</textformat><br/><textformat tabstops='[65, 105, 145]'>Turm:<tab>{turret-front}<tab>{turret-side}<tab>{turret-back}</textformat><br/><textformat tabstops='[65, 105, 145]'><font color = '#ffe970'> <tab>{type-1}<tab>{type-2}<tab>{type-3}</font></textformat><br/><textformat tabstops='[65, 105, 145]'>Durchschlag:<tab>{power-1}<tab>{power-2}<tab>{power-3}</textformat><br/><textformat tabstops='[65, 105, 145]'>Schaden:<tab>{damage-1}<tab>{damage-2}<tab>{damage-3}</textformat></font>"
        }
    },
    "weight_color": {
        "badly": "#ff0000",
        "good": "#00FF00",
        "poor": "#FFFF00"
    }
}