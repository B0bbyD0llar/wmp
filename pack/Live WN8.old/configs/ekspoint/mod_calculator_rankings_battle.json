/*
    --------------------------------------------------------------------------------------------------------------------------
	||           Macros         ||  ||                        Description                                                   ||
	--------------------------------------------------------------------------------------------------------------------------
    || {colorWN8}               ||  || Color depending on WN8 rating                                                        ||
	|| {colorEFF}               ||  || Color depending on player efficiency                                                 ||
	|| {colorXWN8}              ||  || Color depending on XVM Scale for WN8                                                 ||
	|| {colorXEFF}              ||  || Color depending on XVM Scale for efficiency                                          ||
    || {colorCOEF}              ||  || Dynamic color performance for battle DMG on the current tank for COEF             ||
	|| {colorDIFF}              ||  || Dynamic color moderate DMG on the server for the current battle tank for DIFF     ||
	|| {colorAVGDMG}         ||  || Dynamic color according to the average DMG                                        ||
	|| {WN8}                    ||  || WN8 rating                                                                           ||
	|| {EFF}                    ||  || Player efficiency                                                                    ||
	|| {XWN8}                   ||  || XVM Scale for WN8 (values 00-99, XX for Tops)                                        ||
	|| {XEFF}                   ||  || XVM Scale for efficiency (values 00-99, XX for Tops)                                 ||
    || {COEF}                   ||  || The effectiveness of the battle DMG on the current tank                           ||
    || {DIFF}                   ||  || Average DMG caused by the server that you need to apply                           ||
    || {AVGSHOTS}               ||  || Average DMG caused for your number of shots                                       ||
    || {AVGDMG}              ||	|| average DMG during the battle	                                                    ||
	|| {DMG}                 ||  || The total DMG caused                                                              ||
	|| {MAINGUN}                ||  || High Caliber                                                                         ||
	--------------------------------------------------------------------------------------------------------------------------
*/
{
	    "settings": {
		    "enable": true,
			"dragEnable": true,                   // (Ctrl+LClick) and drag the mod wherever you want
			"reloadKey": "KEY_LALT and KEY_2",
		    "hotKeyEnable": "KEY_LALT and KEY_1"
		},
		// Background settings
        "background": {
		    "enable": false,
            "alpha": 100,
            "height": 70,
            "image": "gui/maps/bg.png",
            "width": 200,
            "x": -30,
            "y": 440
        },
		// Shadow Text seetings
        "shadow": {
		    "enable": true,
            "alpha": 100,
            "angle": 90,
            "color": "#000000",
            "distance": 0,
            "size": 3,
            "strength": 200
        },
		"mainGun": {
        "dynamic": true,
        "mainGunIcon": "<img src='img://gui/maps/icons/achievement/32x32/mainGun.png' width='24' height='22' vspace='-6'>",
        "mainGunDoneIcon": "<img src='img://gui/maps/icons/library/done.png' width='22' height='22' vspace='-6'>",
        "mainGunFailureIcon": "<img src='img://gui/maps/icons/library/icon_alert_32x32.png' width='22' height='22' vspace='-6'>",
		"format": "{mainGunIcon}{mainGunDoneIcon}{mainGunFailureIcon}<font color='#E0E06D'>{mainGun}</font>"
    },	
		// Text settings
        "text": {
		    "enable": true,
			"alignX": "left", // Horizontal alignment [left, center, right]
            "alignY": "top",  // Vertical alignment   [top, center, bottom]
            "format": "<font color='#ffffff' size='11' face='$TextFont'>WN8: <font color='{colorWN8}'>{WN8}</font></font>",
			"x": 125,
            "y": 39
        },
		// Dynamic colors for WN8, EFF, XWN8, EFF, COEF, DIFF, AVGDMG
		"colors": [
			{"type": "COEF",        "value": 0.6,			"color": "#FE0E00"},
     	    {"type": "COEF",        "value": 0.8,			"color": "#FE7903"},
     	    {"type": "COEF",        "value": 1.0,			"color": "#F8F400"},
     	    {"type": "COEF",        "value": 1.3,			"color": "#60FF00"},
     	    {"type": "COEF",        "value": 2.0,			"color": "#02C9B3"},
            {"type": "COEF",        "value": 15,			"color": "#D042F3"},
             
			{"type": "DIFF",        "value": "less",        "color": "#FE0E00"},
            {"type": "DIFF",        "value": "same",        "color": "#FF9000"},
            {"type": "DIFF",        "value": "more",        "color": "#26FF26"},
         
			{"type": "AVGDMG",	"value": "less",	    "color": "#FFFFFF"},
            {"type": "AVGDMG",	"value": "more",	    "color": "#60FF00"}
		]
}
